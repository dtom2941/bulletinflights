        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Pick Starting Location"
            android:id="@+id/displayStartLocationOption"
            android:layout_marginTop="15dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/startLocationPicker"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/displayStartLocationOption"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Pick Ending Location"
            android:id="@+id/displayEndLocationOption"
            android:layout_below="@+id/startLocationPicker"
            android:layout_marginTop="15dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/endLocationPicker"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/displayEndLocationOption"
            android:layout_marginTop="15dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Pick Date"
            android:id="@+id/DisplayDateOption"
            android:layout_below="@+id/endLocationPicker"
            android:layout_marginTop="15dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/datePicker"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/scheduleStartingLocation"
            android:layout_alignEnd="@+id/scheduleStartingLocation"
            android:layout_below="@+id/DisplayDateOption"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Pick Date"
            android:id="@+id/DisplayTimeOption"
            android:layout_below="@+id/datePicker"
            android:layout_marginTop="15dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/timePicker"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/scheduleStartingLocation"
            android:layout_alignEnd="@+id/scheduleStartingLocation"
            android:layout_below="@+id/DisplayTimeOption"
            android:layout_marginTop="15dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post Flight"
            android:id="@+id/registerFlight"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/timePicker" />

