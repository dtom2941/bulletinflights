<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.bulletinflights.MainMenu"
    tools:showIn="@layout/activity_main_menu">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book a Flight"
        android:id="@+id/ButtonGoBookflight"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="38dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="goBookFlight"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Main Menu"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schedule Flight"
        android:id="@+id/scheduleflight"
        android:layout_below="@+id/ButtonGoBookflight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/ButtonGoBookflight"
        android:layout_alignEnd="@+id/ButtonGoBookflight"
        android:onClick="goScheduleFlight"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flights"
        android:id="@+id/flights"
        android:layout_below="@+id/scheduleflight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/scheduleflight"
        android:layout_alignEnd="@+id/scheduleflight"
        android:onClick="goToFlights"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flight Requests"
        android:id="@+id/flightrequests"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/flights"
        android:layout_alignRight="@+id/flights"
        android:layout_alignEnd="@+id/flights"
        android:onClick="goToFlightRequests"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report Problems"
        android:id="@+id/reportproblems"
        android:layout_below="@+id/flightrequests"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/flightrequests"
        android:layout_alignEnd="@+id/flightrequests"
        android:onClick="goToReportProblems"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/button2"
        android:layout_below="@+id/reportproblems"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/reportproblems"
        android:layout_alignEnd="@+id/reportproblems"
        android:onClick="goToSettings"/>

</RelativeLayout>
